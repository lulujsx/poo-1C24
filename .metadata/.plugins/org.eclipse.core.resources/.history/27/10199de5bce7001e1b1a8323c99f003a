package TP_1;

public class Perro {
	
	private String nombre;
	
	public Perro(String nom1) {
		this.nombre = nom1;
	}
	
	public void ladrar() {
		System.out.println(this.nombre +" ladra: Guau,guau.");
	}
	public void comer() {
		System.out.println(this.nombre + " está comiendo.");
	}
	public void jugar() {
		System.out.println(this.nombre + " está jugando.");
	}
	public void moverLaCola() {
		System.out.println(this.nombre + " está moviendo la cola.");
	}
}
